{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Flutter Web Server",
      "type": "shell",
      "command": "flutter",
      "args": [
        "run",
        "-d",
        "web-server",
        "--web-hostname",
        "0.0.0.0"
      ],
      "options": {
        "cwd": "${workspaceFolder}/app/"
      },
      "group": "run",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
}